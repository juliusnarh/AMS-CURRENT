<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/farmerimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/jnarh" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/farmimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/jnarh" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tooltiplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="FarmerID:"
                    android:textColor="@color/md_orange_800"
                    android:textSize="@dimen/text_size_ssmall" />

                <TextView
                    android:id="@+id/farmerid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_ssmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="FarmID:"
                    android:textColor="@color/md_orange_800"
                    android:textSize="@dimen/text_size_ssmall" />

                <TextView
                    android:id="@+id/farmid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_ssmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Crop Variety:"
                    android:textColor="@color/md_orange_800"
                    android:textSize="@dimen/text_size_ssmall" />

                <TextView
                    android:id="@+id/cropvariety"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_ssmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <!--AAAAAAAAAAAAAAAAAAAAAA-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Longitude:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_extra_small" />

                        <TextView
                            android:id="@+id/longitude"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_extra_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="DOP:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_extra_small" />

                        <TextView
                            android:id="@+id/dop"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_extra_small" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Fertilizer:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_extra_small" />

                        <TextView
                            android:id="@+id/fertilizer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.6"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_extra_small" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/agent_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crop Protection:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_extra_small" />

                        <TextView
                            android:id="@+id/cropprotection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_toEndOf="@id/pcid_layout"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_extra_small" />
                    </RelativeLayout>

                </LinearLayout>


                <!--BBBBBBBBBBBBBBBBBBBBBB-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="Latitude:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_extra_small" />

                        <TextView
                            android:id="@+id/latitude"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_extra_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Crop Stage:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_ssmall" />

                        <TextView
                            android:id="@+id/cropstage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_ssmall" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Date Applied:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_extra_small" />

                        <TextView
                            android:id="@+id/fertilizerdate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_extra_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/date_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Date Applied:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_extra_small" />

                        <TextView
                            android:id="@+id/cropprotectiondate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_extra_small" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Comments:"
                    android:textColor="@color/md_orange_800"
                    android:textSize="@dimen/text_size_extra_small" />

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_extra_small" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>