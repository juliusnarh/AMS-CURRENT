        

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        tools:context="com.telpo.usb.finger.registration.fragments.MapRegFarmFragment" android:tag="layout/fragment_map_reg_farm_0">

        <LinearLayout
            android:id="@+id/mainlinearfarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Latitude: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/latupdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:text="0.34556778"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Longitude: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/longupdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2.34556778"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="Latitude"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Longitude"
                    android:textSize="12sp" />

                <TextView />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="0dp">

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="350dp"
                    android:layout_height="130dp"
                    android:layout_gravity="top"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:dividerHeight="1dp">

                </ListView>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnadd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add" />

                    <Button
                        android:id="@+id/btnplot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plot" />

                    <Button
                        android:id="@+id/btnclear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear" />

                </LinearLayout>


            </TableRow>

        </TableLayout>


    </LinearLayout>
         