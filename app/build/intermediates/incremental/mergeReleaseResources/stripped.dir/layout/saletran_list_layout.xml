<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/farmerimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/jnarh"
        android:transitionName="farmerimg" />


    <RelativeLayout
        android:id="@+id/tooltiplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/tooltip1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="TransID: "
                    android:textColor="@color/md_orange_800"
                    android:textSize="@dimen/text_size_ssmall" />

                <TextView
                    android:id="@+id/transid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="UCL-200-35-200-355-200-35-20-35-200-35"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_ssmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Purchases: "
                    android:textColor="@color/md_orange_800"
                    android:textSize="@dimen/text_size_ssmall" />

                <TextView
                    android:id="@+id/purchases"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="UCL-200-35-200-355-200-35-20-35-200-35"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_ssmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <!--AAAAAAAAAAAAAAAAAAAAAA-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/cost_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Total Cost:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_ssmall" />

                        <TextView
                            android:id="@+id/cost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="200"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_ssmall" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/sub_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Subsidized:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_ssmall" />

                        <TextView
                            android:id="@+id/sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="40"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_ssmall" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/pmethod_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Payment Method:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_ssmall" />

                        <TextView
                            android:id="@+id/pmethod"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.6"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@string/price_item"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_ssmall" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp">

                        <TextView
                            android:id="@+id/agent_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agent ID: "
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_ssmall" />

                        <TextView
                            android:id="@+id/agent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="AtoK"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_ssmall" />
                    </RelativeLayout>

                </LinearLayout>


                <!--BBBBBBBBBBBBBBBBBBBBBB-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tendered_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Amount Paid:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_ssmall" />

                        <TextView
                            android:id="@+id/tendered"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="14"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_ssmall" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/change_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="Bags Payable:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_ssmall" />

                        <TextView
                            android:id="@+id/bagspayable"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="200"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_ssmall" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/acreage_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Acreage:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_ssmall" />

                        <TextView
                            android:id="@+id/acreage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.6"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@string/acre"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_ssmall" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/date_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Date:"
                            android:textColor="@color/md_orange_800"
                            android:textSize="@dimen/text_size_ssmall" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="0.7"

                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="dd MM, yyyy"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_ssmall" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>