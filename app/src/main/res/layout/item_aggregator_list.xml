<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    app:mrl_rippleAlpha="0.1"
    app:mrl_rippleColor="#000000"
    app:mrl_rippleDimension="10dp"
    app:mrl_rippleDuration="400"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleRoundedCorners="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/row_padding"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:paddingTop="@dimen/row_padding">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/thumbnail"
            android:layout_height="@dimen/thumbnail"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/row_padding"
            android:contentDescription="@string/empty"/>

        <TextView
            android:id="@+id/aggregatorid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/thumbnail"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/contact_name" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/thumbnail"
            android:layout_below="@id/aggregatorid"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/contact_name" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/thumbnail"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/contact_number" />

    </RelativeLayout>

</com.balysv.materialripple.MaterialRippleLayout>