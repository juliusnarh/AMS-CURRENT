<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:id="@+id/service_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/dosis_bold"
            android:text="Service Type:"
            android:textColor="@color/text_color"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/s_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:text="Germination blah blah"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/dosis_bold"
            android:text="Service Provider:"
            android:textColor="@color/text_color"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/s_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:text="UCL GH"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/dosis_bold"
            android:text="Service Cost per Acre:"
            android:textColor="@color/text_color"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/s_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_edittext"
            android:padding="5dp"
            android:text="GH 255.54"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/dosis_bold"
            android:text="Service Description:"
            android:textColor="@color/text_color"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/s_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:background="@drawable/background_edittext"
            android:ellipsize="end"
            android:maxLines="4"
            android:padding="5dp"
            android:text="akrfserfm'sergssle;mglsmga;jlrfnasjfnajsnljandanfkanfkanflkandfkanfkanfkandkfnadkfnakdnfafadfadfadfkandfakndfkanfkanfkandankfaknlsm;fmgsldfmglsdmfg;lsdmfgsdfgsm;ldf"
            android:textSize="@dimen/text_size_ssmall" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/inputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:scaleType="fitXY"
            android:src="@drawable/farmer5" />

        <LinearLayout
            android:id="@+id/tryna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_img"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item_name"
                android:textSize="@dimen/text_size_ssmall" />

            <!--<TextView-->
            <!--android:id="@+id/item_x"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:text="x"-->
            <!--android:textSize="10sp"-->
            <!--android:textStyle="bold" />-->

            <!--<TextView-->
            <!--android:id="@+id/item_quantity"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:text="item_quantity"-->
            <!--android:textSize="@dimen/text_size_ssmall" />-->

        </LinearLayout>


        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_aid"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="item_Description"
            android:textSize="@dimen/text_size_ssmall"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_desc"
            android:layout_marginStart="5dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="@dimen/text_size_extra_tiny"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_aid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tryna"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:ellipsize="middle"
            android:fontFamily=""
            android:singleLine="true"
            android:text="something"
            android:textSize="@dimen/text_size_ssmall" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:background="@drawable/background_round_green"
            android:fontFamily="@font/dosis_bold"
            android:padding="5dp"
            android:text="GHS 200"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>