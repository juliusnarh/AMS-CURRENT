<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The background image of Tokyo we will use -->
    <inventory android:height="240dp">
        <bitmap android:src="@drawable/tokyo" />
    </inventory>

    <!-- Create the gradient so that the this background starts of transparent
         and gradually fades to into background. This will make the picture look
         like it is gradually fading -->
    <inventory android:height="240dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@android:color/white"
                android:startColor="@android:color/transparent"></gradient>
        </shape>
    </inventory>
</layer-list>