<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewBg"
    tools:context=".InputDistMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/farmerCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            android:layout_weight="0.35"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="5dp">

            <FrameLayout
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/greyed" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/farmer_img"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/farmer_img"
                    android:scaleType="fitXY"
                    android:src="@drawable/farmer5" />

                <TextView
                    android:id="@+id/farmer_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/farmer_img"
                    android:text="@string/farmer_id"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/farmer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/farmer_code"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/farmer_img"
                    android:text="@string/farmer_name"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/farmer_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/farmer_name"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/farmer_img"
                    android:text="@string/farmer_coupons"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1.65"
            android:orientation="vertical"
            android:weightSum="2">

            <!--FIRST ROW-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <androidx.cardview.widget.CardView
                    android:id="@+id/seed_card"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="3dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/catImg_11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:contentDescription="Image describing seeds"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/trans">

                            <TextView
                                android:id="@+id/category_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/seeds"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/seed_badge"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="3dp"
                                android:background="@drawable/item_count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fert_card"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="3dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/catImg_12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:contentDescription="Image describing fertilizer"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/trans">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/fert"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/fert_badge"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="3dp"
                                android:background="@drawable/item_count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fugar_card"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="3dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/catImg_41"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:contentDescription="Image describing fugar"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/trans">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/fugar"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/fugar_badge"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="3dp"
                                android:background="@drawable/item_count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tool_card"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="3dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/catImg_31"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:contentDescription="Image describing tools"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/trans">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/mech_tools"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/tool_badge"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="3dp"
                                android:background="@drawable/item_count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!--END OF FIRST ROW-->

            <!--SECOND ROW-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <androidx.cardview.widget.CardView
                    android:id="@+id/pest_card"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="3dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/catImg_21"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:contentDescription="Image describing pesticides"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/trans">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/pest"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/pest_badge"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="3dp"
                                android:background="@drawable/item_count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/insect_card"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="3dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/catImg_22"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:contentDescription="Image describing chemical"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/trans">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/insecticides"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/insect_badge"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="3dp"
                                android:background="@drawable/item_count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/service_card"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="3dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/catImg_32"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:contentDescription="Image describing seeds" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/trans">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/services"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/service_badge"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="3dp"
                                android:background="@drawable/item_count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/weed_card"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="3dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/catImg_42"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:contentDescription="Image describing fugar"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/trans">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="@string/weed"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:id="@+id/weed_badge"
                                android:layout_width="28dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="3dp"
                                android:background="@drawable/item_count"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!--END OF SECOND ROW-->

        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
