<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/custom_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_edittext"
        android:drawableLeft="@drawable/twotone_monetization_on_24"
        android:hint="Agreed Items"
        android:inputType="number"
        android:padding="5dp"
        android:textColorHighlight="@color/secondary_light"
        android:textColorHint="@color/secondary_light" />

    <TextView
        android:id="@+id/custom_declaration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/grey_100"
        android:fontFamily="@font/dosis_medium"
        android:textSize="@dimen/text_size_bsmall"
        android:textStyle="italic" />
</LinearLayout>