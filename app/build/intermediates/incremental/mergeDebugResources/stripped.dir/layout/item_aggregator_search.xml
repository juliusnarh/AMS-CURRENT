<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    app:mrl_rippleAlpha="0.1"
    app:mrl_rippleColor="#000000"
    app:mrl_rippleDimension="10dp"
    app:mrl_rippleDuration="300"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleRoundedCorners="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:id="@+id/index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:fontFamily="@font/varelaround"
            android:gravity="center"
            android:padding="2dp"
            android:text="1."
            android:textSize="@dimen/text_size_bsmall" />

        <TextView
            android:id="@+id/aggregatorid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:fontFamily="@font/varelaround"
            android:padding="2dp"
            android:text="Ato Kwamena Quagraine"
            android:textSize="@dimen/text_size_bsmall" />

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>