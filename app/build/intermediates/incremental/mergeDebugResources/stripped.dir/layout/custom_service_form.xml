<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_service_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_edittext"
        android:clickable="true"
        android:drawableEnd="@drawable/arrow_down"
        android:editable="false"
        android:focusable="false"
        android:fontFamily="sans-serif-light"
        android:hint="Service Type"
        android:padding="10dp"
        android:textSize="@dimen/text_size_medium" />

    <EditText
        android:id="@+id/et_service_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_edittext"
        android:fontFamily="sans-serif-light"
        android:hint="Service cost per acre"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textSize="@dimen/text_size_medium" />

    <EditText
        android:id="@+id/service_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_edittext"
        android:clickable="true"
        android:drawableEnd="@drawable/arrow_down"
        android:editable="false"
        android:focusable="false"
        android:fontFamily="sans-serif-light"
        android:hint="Service Provider"
        android:padding="10dp"
        android:textSize="@dimen/text_size_medium" />

    <EditText
        android:id="@+id/et_service_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_edittext"
        android:fontFamily="sans-serif-light"
        android:hint="Service description"
        android:inputType="textMultiLine|textCapSentences"
        android:padding="10dp"
        android:textSize="@dimen/text_size_medium" />
</LinearLayout>