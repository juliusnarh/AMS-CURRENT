<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_autoscale_button"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="TransID: "
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/transid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="UCL-200-35-200-355-200-35-20-35-200-3535-200-35"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_ssmall"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <!--AAAAAAAAAAAAAAAAAAAAAA-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/weight_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T. Weight:"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/tweight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/weight_layout"
                        android:gravity="end"
                        android:text="200"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_ssmall"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/count_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bags: " />

                    <TextView
                        android:id="@+id/count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/count_layout"
                        android:gravity="end"
                        android:text="200"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_ssmall"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/time_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time:"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/time_layout"
                        android:gravity="end"
                        android:text="HH:mm:ss"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_ssmall"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/pcid_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pcid: "
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/pcid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/pcid_layout"
                        android:gravity="end"
                        android:text="AtoK"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_ssmall"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/payable_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Items Payable: " />

                    <TextView
                        android:id="@+id/payable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/payable_layout"
                        android:gravity="end"
                        android:text="40"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/amount_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount: " />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/amount_layout"
                        android:gravity="end"
                        android:text="@string/price_item"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>


            <!--BBBBBBBBBBBBBBBBBBBBBB-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingEnd="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/aveweight_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ave. Weight:"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/aveweight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/aveweight_layout"
                        android:gravity="end"
                        android:text="200"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_ssmall"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/scaleid_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ScaleID:"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/scaleid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/scaleid_layout"
                        android:gravity="end"
                        android:text="14"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_ssmall"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/date_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/date_layout"
                        android:gravity="end"
                        android:text="yyyy.MM.dd"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_ssmall"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/bcid_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bcid: "
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/bcid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_toEndOf="@id/bcid_layout"
                        android:gravity="end"
                        android:text="AtoK"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_ssmall"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>