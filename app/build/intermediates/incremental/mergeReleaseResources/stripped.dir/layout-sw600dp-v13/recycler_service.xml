<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="vertical" android:tag="layout-sw600dp/recycler_service_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/no_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:text="No Record Available"
            android:textStyle="italic"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/service_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewBg" />
    </LinearLayout>
         