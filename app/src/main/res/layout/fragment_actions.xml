<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".agent.fragment.AllAgentFragment">

    <data>

        <import type="android.view.View" />

        <import type="androidx.fragment.app.Fragment" />

    </data>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_100">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="30dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <!--1-->
                        <LinearLayout
                            android:id="@+id/searchfarmer"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="Search Farmer"
                                android:textSize="@dimen/text_size_medium" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="0dp"
                                android:layout_height="33dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.25"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_24" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/grey_400" />
                        <!--1-->

                        <!--2-->
                        <LinearLayout
                            android:id="@+id/addproduct"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="Add new product"
                                android:textSize="@dimen/text_size_medium" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="0dp"
                                android:layout_height="33dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.25"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_24" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/grey_400" />
                        <!--2-->


                        <LinearLayout
                            android:id="@+id/addservice"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="Add new service"
                                android:textSize="@dimen/text_size_medium" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="0dp"
                                android:layout_height="33dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.25"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_24" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/grey_400" />
                        <!--3-->

                        <!--4-->
                        <LinearLayout
                            android:id="@+id/backupdata"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="Backup Data"
                                android:textSize="@dimen/text_size_medium" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="0dp"
                                android:layout_height="33dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.25"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_24" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/grey_400" />
                        <!--4-->

                        <!--5-->
                        <LinearLayout
                            android:id="@+id/syncfiles"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.7"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="Sync Files:"
                                    android:textSize="@dimen/text_size_small" />

                                <TextView
                                    android:id="@+id/synced"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="Sync Files"
                                    android:textSize="@dimen/text_size_medium" />

                            </LinearLayout>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="0dp"
                                android:layout_height="33dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.25"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_24" />

                        </LinearLayout>
                        <!--5-->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/grey_400" />

                        <!--MANAGE SERVICE PROVIDER-->
                        <LinearLayout
                            android:id="@+id/manageserviceproviders"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="Manage Service Providers"
                                android:textSize="@dimen/text_size_medium" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="0dp"
                                android:layout_height="33dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.25"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_24" />

                        </LinearLayout>
                        <!--INNER VIEWS FOR MANAGE SERVICE PROVIDER-->
                        <LinearLayout
                            android:id="@+id/addserviceprovider"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="@string/add_service_provider"
                                android:textSize="@dimen/text_size_small" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.20"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_black_18"
                                android:tint="@color/grey_600" />


                        </LinearLayout>

                        <View
                            android:id="@+id/forservice"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/grey_600"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/view_edit_serviceprovider"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="@string/view_and_edit_service_provider"
                                android:textSize="@dimen/text_size_small" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.20"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_black_18"
                                android:tint="@color/grey_600" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/grey_400" />
                        <!--MANAGE SERVICE TYPE-->
                        <LinearLayout
                            android:id="@+id/manageservicetype"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="Manage Service Type"
                                android:textSize="@dimen/text_size_medium" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="0dp"
                                android:layout_height="33dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.25"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_24" />

                        </LinearLayout>
                        <!--INNER VIEWS FOR MANAGE SERVICE TYPE-->
                        <LinearLayout
                            android:id="@+id/addservicetype"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="Add Service Type"
                                android:textSize="@dimen/text_size_small" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.20"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_black_18"
                                android:tint="@color/grey_600" />


                        </LinearLayout>

                        <View
                            android:id="@+id/forservice2"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/grey_600"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/view_edit_servicetype"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1.7"
                                android:padding="5dp"
                                android:text="@string/view_and_edit_service_type"
                                android:textSize="@dimen/text_size_small" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="0.20"
                                android:padding="5dp"
                                android:src="@drawable/round_arrow_forward_ios_black_18"
                                android:tint="@color/grey_600" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>