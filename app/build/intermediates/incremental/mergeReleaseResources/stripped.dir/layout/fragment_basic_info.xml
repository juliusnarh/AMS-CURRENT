
                                                       
                                                   

    

                 
                           
                                                                 
           

    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context="com.telpo.usb.finger.registration.fragments.BasicInfoFragment" android:tag="layout/fragment_basic_info_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:shadowColor="@color/cardview_dark_background"
                    android:text="Basic Info Registration"
                    android:textColor="@color/text_color"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/txtpinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Personal Information"
                        android:textColor="@color/text_color"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txtpinfo"
                        android:background="@color/text_color" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/surname_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtsurname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Surname*"
                            android:inputType="textCapWords"
                            android:tag="binding_1"            
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/othername_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtfirstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Firstname*"
                            android:inputType="textCapWords"
                            android:tag="binding_2"              
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nationality_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:gravity="bottom"
                            android:hint="Country*"
                            android:tag="binding_3"                
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/gender_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="Gender*"
                            android:tag="binding_4"           
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/bdate_layout"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="Birth Date*"
                                android:tag="binding_5"                
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                            />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/age_layout"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:hint="Age"
                                android:inputType="number"
                                android:tag="binding_6"        
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/bplace_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtbplace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Birth Place"
                            android:inputType="textCapWords"
                            android:tag="binding_7"                 
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/hometown_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/hometown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hometown"
                            android:inputType="textCapWords"
                            android:tag="binding_8"             
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/farmcomm_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/farmcomm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Farming Community*"
                            android:inputType="textCapWords"
                            android:tag="binding_9"                  
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/region_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/region"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="Region*"
                            android:tag="binding_10"          
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/district_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/district"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="District*"
                            android:tag="binding_11"            
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/residential_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/residence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Residential Address"
                            android:inputType="textCapWords"
                            android:tag="binding_12"                   
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/telephone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/telephone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Telepone*"
                            android:inputType="phone"
                            android:tag="binding_13"             
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/maritalstat_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/maritalstatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="Marital Status*"
                            android:tag="binding_14"                 
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:tag="binding_15"         
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/edu_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="Education Level"
                            android:inputType="textCapWords"
                            android:tag="binding_16"                    
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/post_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/postbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Post Office Box"
                            android:inputType="textCapWords"
                            android:tag="binding_17"                 
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/idtype_layout"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/idtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:editable="false"
                            android:entries="@array/idtypes"
                            android:focusable="false"
                            android:gravity="bottom"
                            android:hint="ID Card Type*"
                            android:tag="binding_18"          
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                                        />

                        />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/idnum_layout"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtidnum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="ID Card Number"
                            android:inputType="textCapCharacters"
                            android:tag="binding_19"            
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:scaleType="fitXY"
                        android:src="@drawable/idcard" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
         